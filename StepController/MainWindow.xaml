<Window x:Class="StepController.MainWindow"
        xmlns:uc="clr-namespace:StepController.Controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StepController"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <uc:StepControl x:Name="progressIndicator" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" HorizontalAlignment="Center" Margin="12,0,12,0"/>
        <Button Content="+" FontSize="20" Grid.Column="0" Grid.Row="0" Height="40" Width="40" VerticalAlignment="Bottom" Click="Add_Click" Margin="12,0,10,0"/>
        <Button Content="-" FontSize="20" Grid.Column="0" Grid.Row="1" Height="40" Width="40" VerticalAlignment="Top" Click="Remove_Click" Margin="12,0,10,0"/>
        
    </Grid>
</Window>
